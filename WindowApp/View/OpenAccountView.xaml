<Window x:Class="WindowApp.View.OpenAccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp.View"
        mc:Ignorable="d"
        Title="OpenAccountView" Height="300" Width="400"
        ResizeMode="NoResize">
    <Canvas>
        <Label Content="Enter your name:" Canvas.Top="50" />
        <TextBox Text="{Binding Name}" MinWidth="100" Canvas.Top="55" Canvas.Left="100"/>
        <Label Content="Enter your surname:" Canvas.Top="100" />
        <TextBox Text="{Binding Surname}" MinWidth="100" Canvas.Top="105" Canvas.Left="120"/>
        <Label Content="Enter date of birth:" Canvas.Top="150" />
        <TextBox Text="{Binding Date_Of_Birth,StringFormat=dd/mm/yyyy}" MinWidth="100" Canvas.Top="155" Canvas.Left="110"/>
        <Label Content="Enter PESEL (if you have):" Canvas.Top="200" />
        <TextBox Text="{Binding Pesel}" MinWidth="100" Canvas.Top="205" Canvas.Left="140" MaxLength="11"/>

        <Button Content="Submit" Command="{Binding AddPersonCommand}" Canvas.Top="240" Canvas.Left="170"/>

    </Canvas>
</Window>
